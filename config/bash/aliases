alias skewl="cd ~/Desktop/skewl/sem5"
alias scripts="cd ~/.local/bin"
alias e="cd ~/Deskop/mot"
alias swol="cd ~/Desktop/Workouts/"
alias bins="cd ~/.config/bin/"
alias t="cd ~/test"
alias pr="cd ~/projects"

#Edit aliases
alias binds="vim ~/.config/sxhkd/sxhkdrc"
alias stc="vim ~/suckless/st/config.h"
alias xrc="vim ~/.xinitrc"

#Custom Aliases
alias vim="nvim"
alias jup="jupyter-notebook" #Start jupyter notebooks
alias pip="pip3"
alias python="python3"
alias p="python3"
alias clip="xclip -sel clip"
alias restart="sudo restart"
alias vault="sudo vault"
alias back="sudo back"
alias tmux="tmux -2"
alias edit="fzf|subl"
alias qdit="fzf|vim"
alias grep="grep --color"
alias build="sudo make clean install"
alias xfce="startx /usr/bin/xfce4-session"
alias sl="ls"
alias urxvt='urxvt -bg "#1b1c1b" -fg "#ffffff" -fn "xft:Bitst'
alias yt="rm -rf"
