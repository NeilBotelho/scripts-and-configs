#New
alias ll="ls -lha" #List everything in human readable form
alias ls="ls -hN --color=auto --group-directories-first" #Make ls human readable with color and directories first
alias l="ls"
alias size="du -ach | sort -h" #Gives size of eveything includeing folders
alias DF="df -Tha --total"  #Current Disk usage
alias psg="ps aux | grep -v grep | grep -i -e VSZ -e" #Grep the process table
alias mkdir="mkdir -pv" #Make the necessary parent directories
alias gh="history | grep -m 30" #Grep history



#For clearing home
alias wget='wget --hsts-file="$XDG_CACHE_HOME/wget-hsts"'
