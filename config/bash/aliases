#!/bin/sh

#Default aliases
 alias cp="cp -i"                          # confirm before overwriting something
 alias df='df -h'                          # human-readable sizes
 alias free='free -m'                      # show sizes in MB
 alias np='nano -w PKGBUILD'
 alias more='less'

 #Print aliases
alias aliases="grep --color=always -e '^$' -e "alias" '$XDG_CONFIG_HOME'/bash/aliases|less -R"
alias functions="grep --color=always -A 1 '^function ' '$XDG_CONFIG_HOME'/bash/functions|less -R"

#Navigation aliases
alias psl="cd /home/neil/projects/psl/federated-learning-lib/ && condai && conda activate psl"
alias cd..="cd .."
